    <script type="text/javascript">
        
    $("#myModal").on("hidden.bs.modal", function() {
            $(this).removeData("bs.modal");
            $(".modal-backdrop").remove();
        });
        
    $('#btn-addSalary').click(function () {
    	if($("#eid").val()==''||$(".salary_month").val()==''||$(".grant_date").val()==''||$("#salary_money").val()==''){
    		$("#salaryInfo").html("<font color='red'><strong>请检查填入数据</strong></font>");
    	}else if($("#eid").val()!=''&&$(".salary_month").val()!=''&&$(".grant_date").val()!=''&&$("#salary_money").val()!=''){
      		$('#form-addSalary').submit();
      	}
	});
  //Date picker
	$('#datepicker').datepicker({
		autoclose: true,
		format: 'yyyy-mm-dd'
	});
  	//Date picker
	$('#datepicker1').datepicker({
		autoclose: true,
		format: 'yyyy-mm-dd'
	});
  	
	
  
    //Ajax请求验证用户信息和返回提示发放金额
   function verifyEmployee(){
	    $.post({
	        url:"${pageContext.request.contextPath}/Salary/verifyEmployee",
	        data:{'eid':$("#eid").val()},
	        success:function (data) {
	            	 $("#salaryInfo").html(data);
	       }
	   });
	}
  
   
	
